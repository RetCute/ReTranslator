<Page x:Class="ReTranslator.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:ReTranslator"
      xmlns:Utilities="clr-namespace:ReTranslator.Utilities"
      mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="140"/>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
            
        <Grid>
            <Button x:Name="captureAreaButton" Content="选择截图区域"
                    VerticalAlignment="Top" 
                    HorizontalAlignment="Left" 
                    Style="{StaticResource RoundButtonStyle}" 
                    Height="50" 
                    Width="100" 
                    Margin="20,230 ,0,  0"
                    Click="getCaptureArea"/>
        <Button x:Name="runButton" Content="开始翻译" 
                VerticalAlignment="Top" 
                HorizontalAlignment="Left" 
                Style="{StaticResource RoundButtonStyle}" 
                Height="50" 
                Width="100" 
                Margin="20,150 ,0,  0"
                Click="Run"/>
        <Button x:Name="processButton" Content="选择进程" 
                VerticalAlignment="Top" 
                HorizontalAlignment="Left" 
                Style="{StaticResource RoundButtonStyle}" 
                Height="50" 
                Width="100" 
                Margin="20,310 ,0,  0"
                Click="selectProcess"/>
        </Grid>
        <Grid Grid.Column="1">
            <RichTextBox Grid.Column="1"
                         x:Name="LogBox"
                         Style="{StaticResource BeautifiedLogBox}"
                         Height="500"
                         />
        </Grid>
        
        <Grid Grid.Column="2">
            <Border CornerRadius="8"
                    BorderThickness="1"
                    BorderBrush="#E0E0E0"
                    Background="#FFFFFF"
                    Height="500"
                    Width="330"
                    Margin="10 0 0 0">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10" 
                                      ShadowDepth="0" 
                                      Opacity="0.1" 
                                      Color="#000000"/>
                </Border.Effect>
                <Utilities:HookCodePanel x:Name="hookPanel"/>
                    
            </Border>
        </Grid>
    </Grid>
</Page>
